<div class="form">
  <h3 class="form-title">Login</h3>
  <form class="form-group" {{action "authenticate" on="submit"}}>

    {{!-- error messages --}}
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

    <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="email">Email</label>
      <div class="col-sm-9">
        {{input required=true value=email type="email" placeholder="Enter Login" class="form-control"}}
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="password">Password</label>
      <div class="col-sm-9">
        {{input required=true value=password type="password" placeholder="Enter password" class="form-control"}}
      </div>
    </div>
    
    <div class="submit">
      <button class="btn btn-primary" type="submit">Login</button>
    </div>
    
  </form>
</div>
