<div class="book-detail">
    <form class="form-group" {{action "submit" on="submit"}}>
        {{!-- error message --}}
        {{#if errorMessage}}
            {{#each errorMessage as |error|}}
                <h6 class="error">- {{error}}</h6>
            {{/each}}
        {{/if}}

        <div class="row form-group">
            <label class="col-sm-4 col-form-label" for="email">Email</label>
            <div class="col-sm-8">
                {{#if userCreation}}
                    {{input type="email" value=user.email placeholder="Enter Email" class="form-control"}}
                {{else}}
                    <p class="col-form-label">{{user.email}}</p>
                {{/if}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="first_name">First Name</label>
            <div class="col-sm-8">
                {{input required=true value=user.first_name placeholder="Enter First Name" class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="last_name">Last Name</label>
            <div class="col-sm-8">
                {{input required=true value=user.last_name placeholder="Enter Last Name" class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="email">Wallet</label>
            <div class="col-sm-8">
                {{input type="number" value=user.wallet placeholder=10000 class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="Address">Address</label>
            <div class="col-sm-8">
                {{input value=user.address placeholder="Enter Address" class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="Admin">Admin</label>
            <div class="col-sm-8">
                {{input type="checkbox" checked=user.is_admin class="form-control toggle"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="Active">Active</label>
            <div class="col-sm-8">
                {{input type="checkbox" checked=user.is_active class="form-control toggle"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="password">Password</label>
            <div class="col-sm-8">
                {{input required=(if userCreation true false) type="password" value=user.password class="form-control"}}
            </div>
        </div>


        <div class="submit">
            <button class="btn btn-primary" type="submit">{{if userCreation "Create" "Update"}}</button>
        </div>
    </form>
</div>