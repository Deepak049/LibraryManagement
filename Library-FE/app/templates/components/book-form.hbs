{{!-- book-update form --}}
<div class="book-detail">
    <form class="form-group" {{action "submit" on="submit"}}>
        {{!-- error messages --}}
        {{#if errorMessage}}
            {{#each errorMessage as |error|}}
            <h6 class="error">- {{error}}</h6>
            {{/each}}
        {{/if}}

        <div class="row form-group">
            <label class="col-sm-4 col-form-label" for="title">Title</label>
            <div class="col-sm-8">
                {{input required=true placeholder="Enter Title" value=book.title class="form-control"}}
            </div>
        </div>

        <div class="row form-group">
            <label class="col-sm-4 col-form-label" for="author">Author</label>
            <div class="col-sm-8">
                {{input required=true placeholder="Enter Author" value=book.author class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="description">Description</label>
            <div class="col-sm-8">
                {{textarea value=book.description placeholder="Enter Description" class="form-control" cols="80" rows="6"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="isbn">ISBN</label>
            <div class="col-sm-8">
                {{input required=true type="number" placeholder="Enter ISBN" value=book.isbn class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="category">Category</label>
            <div class="col-sm-8">
                {{input value=book.category placeholder="Enter Category" class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="quantity">Quantity</label>
            <div class="col-sm-8">
                {{input type="number" placeholder="Enter Quantity" value=book.quantity class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="price">Price</label>
            <div class="col-sm-8">
                {{input type="number" placeholder="Enter Price" value=book.price class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="fine">Fine</label>
            <div class="col-sm-8">
                {{input type="number" placeholder="Enter Fine" value=book.fine class="form-control"}}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="Active">Active</label>
            <div class="col-sm-8">
                {{input type="checkbox" checked=book.is_active class="form-control toggle"}}
            </div>
        </div>

        <div class="submit">
            <button class="btn btn-primary mt-3" type="submit">Update</button>
        </div>
    </form>
</div>