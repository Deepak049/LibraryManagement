<div class="form">
  <h3 class="form-title">SignUp</h3>
  <form class="form-group" {{action "submit" on="submit"}}>

    {{!-- error messages --}}
    {{#if errorMessage}}
      {{#each errorMessage as |error|}}
        <h6 class="error">- {{error}}</h6>
      {{/each}}
    {{/if}}

    <div class="form-group row">
      <label class="col-sm-4 col-form-label" for="first_name">First Name</label>
      <div class="col-sm-8">
        {{input required=true value=user.first_name placeholder="Enter First Name" class="form-control"}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label" for="last_name">Last Name</label>
      <div class="col-sm-8">
        {{input required=true value=user.last_name placeholder="Enter Last Name" class="form-control"}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label" for="Address">Address</label>
      <div class="col-sm-8">
        {{input value=user.address placeholder="Enter Address" class="form-control"}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label" for="email">Email</label>
      <div class="col-sm-8">
        {{input required=true value=user.email type="email" placeholder="Enter Email" class="form-control"}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label" for="password">Password</label>
      <div class="col-sm-8">
        {{input required=true value=user.password type="password" placeholder="Enter Password" class="form-control"}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label" for="password_confirmation">Confirm Password</label>
      <div class="col-sm-8">
        {{input required=true value=user.password_confirmation type="password" placeholder="Enter Password Again" class="form-control"}}
      </div>
    </div>

    <div class="submit">
      <button class="btn btn-success" type="submit">SignUp</button>
    </div>
  </form>
</div>